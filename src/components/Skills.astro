---
import CSSIcon from "./tools/CSSIcon.astro";
import HTMLIcon from "./tools/HTML.astro";
import JavaScript from "./tools/JavaScript.astro";
import MySQL from "./tools/MySQL.astro";
import Notion from "./tools/Notion.astro";
import OpenAI from "./tools/OpenAI.astro";
import Sass from "./tools/Sass.astro";
const TAGS = [
  {
    name: "HTML5",
    class: "text-black bg-orange-300",
    Icon: HTMLIcon,
  },
  {
    name: "CSS3",
    class: "text-black bg-blue-300",
    Icon: CSSIcon,
  },
  {
    name: "JavaScript",
    class: "text-black bg-yellow-300",
    Icon: JavaScript,
  },
  {
    name: "Sass",
    class: "text-black bg-pink-300",
    Icon: Sass,
  },
  {
    name: "MySQL",
    class: "text-black bg-blue-300",
    Icon: MySQL,
  },
  {
    name: "OpenAI",
    class: "text-black bg-green-300",
    Icon: OpenAI,
  },
  {
    name: "Notion",
    class: "text-black bg-gray-300",
    Icon: Notion,
  },
];
---

<ul class="w-full
  mb-2
  flex
  flex-wrap
  gap-x-4
  gap-y-2
  md:flex-row">
  {
    TAGS.map(({ name, class: classValue, Icon }) => (
      <li class="">
        <span
          class={`flex justify-center items-center gap-x-2 rounded-3xl text-xs ${classValue} py-1 px-3`}
        >
          <Icon class="size-5" />
          {name}
        </span>
      </li>
    ))
  }
</ul>
