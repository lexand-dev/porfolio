---
import EmailIcon from "@/components/icons/tech/Email.astro";
import GithubIcon from "@/components/icons/tech/Github.astro";
import LinkedInIcon from "@/components/icons/tech/LinkedIn.astro";

import Badge from "@/components/ui/Badge.astro";
import SocialPill from "@/components/SocialPill.astro";

interface Props {
  badge: string;
  about: string;
  country: string;
}

const { badge, about, country } = Astro.props;
---

<header
  class="w-full
      flex
			flex-col
			items-center
			justify-between
			text-center
			md:flex-row"
>
  <div
    class="max-w-[700px]
        flex
				flex-col
				items-center
				md:items-start
				text-center
				md:text-left"
  >
    <h1
      class="text-6xl text-black/60 dark:text-gray-300 font-mansalva font-bold flex flex-col pb-6"
    >
      Alexander
      <span class="text-green-500"> Flores rayme </span>
    </h1>
    <div class="flex items-center py-4 gap-x-4">
      <Badge>
        {badge}
      </Badge>
      <p class="p-0 font-semibold">{country}</p>
    </div>
    <div class="flex flex-col items-center md:items-start gap-y-8">
      <p
        set:html={about}
        class="text-gray-600 dark:text-gray-300 max-w-[590px] text-left text-pretty text-lg"
      />
      <ul class="flex flex-wrap gap-4">
        <SocialPill
          href="https://www.linkedin.com/in/alexander-flores-rayme-727545165/"
        >
          <LinkedInIcon class="size-4" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/lexand-dev">
          <GithubIcon class="size-4" />
          Github
        </SocialPill>
        <SocialPill href="mailto:alexfloresrayme@gmail.com">
          <EmailIcon class="size-4" />
          Email
        </SocialPill>
      </ul>
    </div>
  </div>
  <div class="py-4 flex flex-col items-center">
    <div>
      <img
        src="/img/profile.webp"
        alt="Alexander Flores Rayme"
        loading="lazy"
        decoding="async"
        class="rounded-lg
            w-[300px]
						md:max-w-[400px]
						md:h-[380px]"
      />
    </div>
  </div>
</header>
