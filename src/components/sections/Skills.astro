---
import CSSIcon from "@/components/icons/tools/CSSIcon.astro";
import HTMLIcon from "@/components/icons/tools/HTML.astro";
import JavaScript from "@/components/icons/tools/JavaScript.astro";
import MySQL from "@/components/icons/tools/MySQL.astro";
import Notion from "@/components/icons/tools/Notion.astro";
import OpenAI from "@/components/icons/tools/OpenAI.astro";
import Sass from "@/components/icons/tools/Sass.astro";

import GlowSection from "@/components/react/GlowSection";

import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const TAGS = [
  {
    name: "HTML5",
    class: "text-black bg-orange-300",
    Icon: HTMLIcon,
  },
  {
    name: "CSS3",
    class: "text-black bg-blue-300",
    Icon: CSSIcon,
  },
  {
    name: "JavaScript",
    class: "text-black bg-yellow-300",
    Icon: JavaScript,
  },
  {
    name: "Sass",
    class: "text-black bg-pink-300",
    Icon: Sass,
  },
  {
    name: "MySQL",
    class: "text-black bg-blue-300",
    Icon: MySQL,
  },
  {
    name: "OpenAI",
    class: "text-black bg-green-300",
    Icon: OpenAI,
  },
  {
    name: "Notion",
    class: "text-black bg-gray-300",
    Icon: Notion,
  },
];
---

<ul class="w-full
  mb-2
  flex
  flex-wrap
  gap-x-4
  gap-y-2
  md:flex-row">
  {
    TAGS.map(({ name, class: classValue, Icon }) => (
      <li class="">
        <span
          class={`flex justify-center items-center gap-x-2 rounded-3xl text-xs ${classValue} py-1 px-3`}
        >
          <Icon class="size-5" />
          {name}
        </span>
      </li>
    ))
  }
</ul>
<GlowSection
  title={i18n.STACK_TITLE}
  description={i18n.STACK_DESCRIPTION}
  client:visible
/>
