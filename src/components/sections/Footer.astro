---
import SocialPill from "@/components/SocialPill.astro";
import GithubIcon from "@/components/icons/tech/Github.astro";
import InstagramIcon from "@/components/icons/tech/Instagram.astro";
import LinkedInIcon from "@/components/icons/tech/LinkedIn.astro";

import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const date = new Date().getFullYear();
---

<footer
  class="rounded-lg shadow m-4 bg-black/10 backdrop-blur-md w-full md:max-w-[1072px] mx-auto mb-10"
>
  <div
    class="w-full mx-auto p-4 md:flex md:items-center md:justify-between px-4 md:px-8"
  >
    <span class="text-sm sm:text-center text-green-500">
      Â© {date}
      {i18n.FOOTER_COPYRIGHT}
    </span>
    <nav
      class="flex flex-wrap items-center mt-3 text-sm font-medium text-black/90 sm:mt-0 gap-x-2"
    >
      <SocialPill
        href="https://www.linkedin.com/in/alexander-flores-rayme-727545165/"
      >
        <LinkedInIcon class="size-5" />
      </SocialPill>
      <SocialPill href="https://github.com/lexand-dev">
        <GithubIcon class="size-5" />
      </SocialPill>
      <SocialPill href="https://www.instagram.com/lexand_dev/">
        <InstagramIcon class="size-5" />
      </SocialPill>
    </nav>
  </div>
</footer>
