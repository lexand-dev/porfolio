---
import SectionContainer from "../components/SectionContainer.astro";
import SectionTitle from "../components/SectionTitle.astro";

import AsideCard from "../components/AsideCard.astro";
import AsideSection from "../components/AsideSection.astro";

import Experience from "../components/Experience.astro";
import Hero from "../components/Hero.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import ViewMore from "../components/ViewMore.astro";
import Briefcase from "../components/icons/BriefCase.astro";
import CodeIcon from "../components/icons/Code.astro";
import ToolsIcon from "../components/icons/Tools.astro";
import Layout from "../layouts/Layout.astro";

import { getI18N } from "../i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title={i18n.SEO_TITLE} description={i18n.SEO_DESCRIPTION}>
  <main class="w-full h-full max-w-[1072px] mx-auto">
    <section id="about-me" class="py-10 lg:py-36 w-full px-4">
      <Hero
        badge={i18n.HERO_BADGE}
        about={i18n.HERO_ABOUT}
        country={i18n.HERO_COUNTRY}
      />
    </section>

    <div class="md:flex pb-16 space-y-8 md:space-x-8 md:pb-20">
      <div>
        <SectionContainer id="experience">
          <SectionTitle
            class="text-xl md:text-3xl font-semibold py-4 mb-6 flex gap-x-3 items-center"
          >
            <Briefcase class="size-7" />
            {i18n.EXPERIENCE_TITLE}
          </SectionTitle>
          <Experience data={i18n.EXPERIENCE_ITEMS} />
        </SectionContainer>

        <SectionContainer id="projects">
          <SectionTitle class="text-2xl md:text-3xl font-semibold py-4 mb-6">
            <span>
              <CodeIcon class="inline-block size-8 mr-2" />
            </span>
            {i18n.PROJECTS_TITLE}
            <span class="inline-block text-blue-500">
              <ViewMore href="/projects" />
            </span>
          </SectionTitle>

          <div
            class="mx-auto
            w-[fit-content]
            flex
            flex-col
            md:flex-wrap
            md:flex-row
            gap-4"
          >
            <Projects />
          </div>
        </SectionContainer>

        <SectionContainer id="skills">
          <SectionTitle class="text-2xl md:text-3xl font-bold py-4">
            <span>
              <ToolsIcon class="inline-block size-8 mr-2" />
            </span>
            Skills
          </SectionTitle>
          <Skills />
        </SectionContainer>

        <SectionContainer id="contacto">
          <SectionTitle class="text-2xl md:text-3xl font-bold py-4">
            <span>
              <ToolsIcon class="inline-block size-8 mr-2" />
            </span>
            {i18n.CONTACT_TITLE}
          </SectionTitle>
          <div class="flex flex-col gap-4">
            <p class="text-lg">
              {i18n.CONTACT_MESSAGE}
            </p>
            <a href="mailto:alexfloresrayme@gmail.com" class="text-blue-500">
              Hello -->
            </a>
          </div>
        </SectionContainer>
      </div>
      <AsideSection id="aside-section" class="flex flex-col space-y-8">
        <AsideCard />
        <AsideCard />
      </AsideSection>
    </div>
  </main>
</Layout>
