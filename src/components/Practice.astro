---
import Github from "./icons/Github.astro";
import LinkIcon from "./icons/Link.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "text-black",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "text-black",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "Calculadora - App",
    description:
      "Calculadora hecha con React.js y Tailwind CSS. Es una app que permite realizar operaciones matemáticas básicas.",
    link: "https://svgl.vercel.app/",
    github: "https://github.com/pheralb/svgl",
    image: "/projects/project-1.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "TODO App",
    description:
      "Aplicación de tareas hecha con React.js y Tailwind CSS. Permite crear, editar y eliminar tareas. Además, cuenta con un buscador.",
    link: "https://pheralb.com/",
    github: "",
    image: "/projects/project-2.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "3 en raya - App",
    description:
      "Juego de 3 en raya hecho con React.js y Tailwind CSS. Permite jugar contra la computadora o contra otra persona.",
    link: "https://pheralb.com/",
    github: "",
    image: "/projects/project-3.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "CRUD - App",
    description:
      "Aplicación CRUD hecha con React.js y Tailwind CSS. Permite crear, editar y eliminar usuarios. Además, cuenta con un buscador.",
    link: "https://pheralb.com/",
    github: "",
    image: "/projects/project-4.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
]
---

{
  PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="rounded-2xl border border-black p-10 ml-5 bg-green-50 w-[350px]">
      <h3 class="text-pretty text-2xl font-semibold text-green-500 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-auto pb-5"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
      <div class="flex flex-col gap-y-2">
        <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex justify-center items-center gap-x-2 rounded-full border border-black bg-slate-100 text-xs ${tag.class} py-1 px-3`}
            >
              <tag.icon class="size-5" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <div class="flex">
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="text-green-500 hover:text-green-700 flex items-center gap-1 justify-center transition
            hover:scale-105 transform"
        >
        <span class="block">
          <LinkIcon class="size-5 inline-block" />
        </span>
          <p class="block">
            Ver proyecto
          </p>
        </a>
        <span class="mx-2">|</span>
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="text-green-500 hover:text-green-700 flex items-center gap-1 justify-center transition
            hover:scale-105 transform"
        >
        <span>
          <Github class="size-6 inline-block" />
        </span>
          Ver código
        </a>
      </div>

      </div>

    </article>
  ))
}